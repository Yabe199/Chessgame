            <Label x:Name="lblPlayerTwo" Content="Player Two" HorizontalAlignment="Center" Height="30" Margin="900,0,0,575" VerticalAlignment="Center" Width="250"/>
            <Button x:Name="btnBackToMenu" Content="Back to menu" HorizontalAlignment="Left" Height="29" Margin="912,761,0,0" VerticalAlignment="Top" Width="130" Click="BtnBackToMenu_Click_1"/>
            <Grid HorizontalAlignment="Center" Height="50" Margin="0,700,0,0" VerticalAlignment="Center" Width="600">
                <Grid.Background>
                    <SolidColorBrush Color="{DynamicResource {x:Static SystemColors.AppWorkspaceColorKey}}"/>
                </Grid.Background>
                <Label x:Name="lblCurrentMove" Content="Label" HorizontalAlignment="Left" Height="30" Margin="10,10,0,0" VerticalAlignment="Top" Width="360" VerticalContentAlignment="Center"/>
                <Button x:Name="btnSubmit" Content="Submit" HorizontalAlignment="Left" Height="30" Margin="370,10,0,0" VerticalAlignment="Top" Width="100" HorizontalContentAlignment="Center"/>
